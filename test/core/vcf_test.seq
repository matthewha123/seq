def test_valid_rec_formats_col():
    parser = BCF('../data/valid_vcf.vcf')

    rec = next(parser)
    formats = rec.formats
    expected_format_names = {'GT', 'GQ', 'DP', 'HQ'}
    assert {f for f in formats} == expected_format_names

    meta_gt = formats['GT']
