def test_valid_rec_samples_col():
    parser = BCF('../data/valid_vcf.vcf')

    rec = next(parser)
    samples = rec.samples
    expected_sample_names = {'NA00001', 'NA00002', 'NA00003'}
    assert {samp.name for samp in samples} == expected_sample_names

    assert samples['NA00001'].alleles == ['G', 'G']

    parser.close()

